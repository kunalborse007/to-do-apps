<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>To-Do App</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <h1>üìù To-Do List</h1>

    <form action="/add" method="POST">
      <input type="text" name="task" placeholder="Add a task" required>
      <button type="submit">Add</button>
    </form>

    <ul>
      <% todos.forEach(todo => { %>
        <li class="<%= todo.completed ? 'done' : '' %>">
          <form action="/toggle/<%= todo._id %>" method="POST" style="display:inline;">
            <button type="submit"><%= todo.completed ? '‚úÖ' : '‚¨ú' %></button>
          </form>
          <span><%= todo.task %></span>
          <form action="/delete/<%= todo._id %>" method="POST" style="display:inline;">
            <button type="submit">‚ùå</button>
          </form>
        </li>
      <% }) %>
    </ul>
  </div>
</body>
</html>
